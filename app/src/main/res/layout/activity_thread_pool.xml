<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pool_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="线程池类型：newScheduledThreadPool(4)"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <include
            android:id="@+id/progress_bar1"
            layout="@layout/progress_item"/>

        <include
            android:id="@+id/progress_bar2"
            layout="@layout/progress_item"/>

        <include
            android:id="@+id/progress_bar3"
            layout="@layout/progress_item"/>

        <include
            android:id="@+id/progress_bar4"
            layout="@layout/progress_item"/>

        <include
            android:id="@+id/progress_bar5"
            layout="@layout/progress_item"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_thread1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="启动线程一"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_thread2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="启动线程二"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_thread3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="启动线程三"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_thread4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="启动线程四"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_thread5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="启动线程五"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_thread_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="全部启动"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_stop1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="停止线程一"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_stop2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="停止线程二"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_stop3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="停止线程三"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_stop4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="停止线程四"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_stop5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="停止线程五"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_stop_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="停止全部"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_shutdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="shutdown()"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_shutdown_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimary"
                android:text="shutdownNow()"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
