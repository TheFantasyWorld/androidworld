<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:layout_margin="@dimen/activity_horizontal_margin"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:background="@color/green_pure"
        android:gravity="center"
        android:text="Android Thread"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_one"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@color/green_pure"
            android:layout_marginBottom="1dp"
            android:text="HandlerThread"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_view_two"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="1dp"
            android:background="@color/green_pure"
            android:text="线程池"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_view_three"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginBottom="1dp"
            android:background="@color/green_pure"
            android:text="IntentService"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_view_four"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="1dp"
            android:background="@color/green_pure"
            android:gravity="center"
            android:orientation="horizontal"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>